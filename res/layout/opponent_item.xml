<?xml version="1.0" encoding="utf-8"?>
 
 <LinearLayout 
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="0dp"
      android:layout_weight="1"
        android:background="@color/player_image_background_color"
        android:id="@+id/llLineItem"
     >
<RelativeLayout
 
    android:id="@+id/rlLineItem"
    android:layout_width="fill_parent"
	android:layout_height="wrap_content"
  >

     	 
	       <ImageView 
			 android:layout_width="fill_parent"
			 android:layout_height="fill_parent"
			    android:id="@+id/ivOpponent"	
			    android:background="@drawable/image_border"
			    android:paddingTop="1dp"
			    android:paddingLeft="1dp"
		        android:scaleType="fitXY"    
			 />
	 	  
		
          <com.riotapps.word.ui.MainFontTextView
            android:id="@+id/tvOpponent"
            style="@style/SubTextStyle"
            android:textSize="18sp"
            android:paddingLeft="4dp"
            android:background="@color/list_text_background"
            android:layout_alignTop="@id/ivOpponent"
           />
  
          <RelativeLayout 
              android:layout_alignBaseline="@id/ivOpponent"
              android:background="@color/list_text_background"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              >
	            <com.riotapps.word.ui.MainFontTextView
	            android:id="@+id/tvSkillLevel"
	            style="@style/SubTextStyle"
	            android:textSize="14sp"
	             android:layout_alignBaseline="@id/ivOpponent"
	            android:layout_alignLeft="@id/ivOpponent"
	           />
	
	    	<RelativeLayout
	    	    android:id="@+id/rlRecord"
	    	    android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/ivOpponent"
                   android:layout_alignRight="@id/ivOpponent"
	    	    >"
	           <com.riotapps.word.ui.MainFontTextView
	            android:id="@+id/tvYourDraws"
	            style="@style/SubTextStyle"
	            android:textSize="12sp"
	            android:paddingRight="2dp"
	            android:layout_alignRight="@id/ivOpponent"
	      
	           />
	           <TextView
	               android:text="@string/hyphen"
	               />
	            <com.riotapps.word.ui.MainFontTextView
	            android:id="@+id/tvYourLosses"
	            style="@style/SubTextStyle"
	            android:textSize="12sp"
	            android:paddingRight="2dp"
	            android:layout_toLeftOf="@id/tvYourDraws"
	           />
	            <TextView
	               android:text="@string/hyphen"
	               />
	          <com.riotapps.word.ui.MainFontTextView
	            android:id="@+id/tvYourWins"
	            style="@style/SubTextStyle"
	            android:textSize="12sp"
	            android:paddingRight="2dp"
	            android:layout_toLeftOf="@id/tvYourLosses"
	           />
	          </RelativeLayout>
           </RelativeLayout>
        
</RelativeLayout>
</LinearLayout>
 