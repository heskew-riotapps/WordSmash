<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"    
    android:layout_height="wrap_content"
    android:focusable="false"
    android:orientation="vertical"
    android:id="@+id/llItem"
    >
	<RelativeLayout
	    style="@style/ContentAreaTextStyle" 
	    android:paddingLeft="2dp" 
	    android:id="@+id/rlItem"		 
	 >
		<ImageView 
			 android:layout_width="64dp"
			 android:layout_height="64dp"
			 android:id="@+id/ivOpponent"	
			 android:background="@drawable/image_border"
			 android:padding="1dp"
		     android:scaleType="fitXY"    
			 />
		<com.riotapps.word.ui.MainFontTextView
            android:id="@+id/tvOpponent"
            style="@style/TextStyle"
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:layout_alignTop="@id/ivOpponent"
            android:layout_toRightOf="@id/ivOpponent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
         />
		 <com.riotapps.word.ui.MainFontTextView
	     	android:id="@+id/tvSkillLevel"
	        style="@style/TextStyle"
	        android:textSize="14sp"
	        android:paddingLeft="3dp"
	        android:layout_toRightOf="@id/tvOpponent"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginTop="2dp"
	     />
  		 <com.riotapps.word.ui.MainFontTextView
	        android:id="@+id/tvSummary"
	        style="@style/TextStyle"
	        android:textSize="14sp"
	        android:paddingLeft="4dp"
	        android:layout_toRightOf="@id/ivOpponent"
	        android:layout_below="@id/tvOpponent"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	      />
	</RelativeLayout>
	<LinearLayout 
		android:paddingLeft="0dp"
		android:paddingRight="0dp"
	    android:layout_marginTop="0dp"
		android:layout_width="fill_parent"    
		android:layout_height="1dp" 
		android:layout_marginBottom="0dp"
		android:id="@+id/llBottomBorder"
		android:background="@color/form_border_color"
	  />   
 </LinearLayout>
 
 