<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"    
    android:layout_height="wrap_content"
    android:focusable="false"
    android:id="@+id/llItem"
    >
<RelativeLayout 
    style="@style/ContentAreaTextStyle" 
    android:paddingLeft="2dp" 
    android:id="@+id/rlItem"
	>
   <ImageView 
	   	style="@style/PlayedWordPlayerImageStyle"
	    android:id="@+id/ivPlayer"	
	 />
	<TextView
         style="@style/TextStyle"
     	android:id="@+id/tvWord"
     	android:layout_marginLeft="2.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/ivPlayer"/>
 
     <TextView 
        style="@style/TextMiniStyle"
     	android:id="@+id/tvTurnInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2.0dip"
        android:layout_below="@id/tvWord"
        android:layout_toRightOf="@id/ivPlayer"/>
    
</RelativeLayout>
<LinearLayout 
			android:paddingLeft="0dp"
		    android:paddingRight="0dp"
		    android:layout_marginTop="5dp"
		    android:layout_width="fill_parent"    
		    android:layout_height="1dp" 
		    android:layout_marginBottom="0dp"
		    android:id="@+id/llBottomBorder">
	    
	    	 <View 
 			      android:id="@+id/vBottomBorder"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:background="@color/form_border_color"
 			     />
	    </LinearLayout>
 
</LinearLayout>
 